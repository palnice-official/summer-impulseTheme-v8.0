{% style %}
  @media only screen and (min-width: 769px) {
    .grid--uniform {
      display: flex;
      flex-direction: row-reverse;
      justify-content: flex-end;
      align-items: center;
    }
    /*.medium-up--one-half {
      width: 25%;
    }*/
  }
  /*@media only screen and (max-width: 768px){
      .medium-up--one-half {
      width: 50%;
    }
  }*/
{% endstyle %}

{%- if section.settings.divider -%}<div class="section--divider">{%- endif -%}

<div class="page-width">
  <div class="grid grid--uniform{% unless section.settings.enable_gutter %} grid--no-gutters{% endunless %}">
    {%- if section.settings.title != blank -%}
      <div class="section-header">
        <h2 class="section-header__title">{{ section.settings.title }}</h2>
      </div>
    {%- endif -%}
    {%- liquid
      assign isEmpty = true
      if section.blocks.size > 0
        assign isEmpty = false
      endif
    -%}

    {% comment %} {% assign all_collections = product.metafields.custom.listcollections | split: ',' %} {% endcomment %}
    {% assign metafield_collections = product.metafields.custom.listcollections.value %}
    {% comment %} {% assign custom_collections = product.metafields.custom.listcollections.value %} {% endcomment %}

    {% if metafield_collections.size > 0 %}

      {%- assign timestamp = 'now' | date: '%s' | plus: 0 -%}

      {%- assign first_index = timestamp | modulo: metafield_collections.size -%}
      {%- assign second_index = first_index | plus: 1 | modulo: metafield_collections.size -%}

      {%- assign random_collections = '' -%}
      {% comment %} {%- assign i = 0 -%} {% endcomment %}

      {% for coll in metafield_collections %}
        {% if forloop.index0 == first_index or forloop.index0 == second_index %}
          {% if random_collections != '' %}
            {% assign random_collections = random_collections | append: ',' | append: coll.handle %}
          {% else %}
            {% assign random_collections = coll.handle %}
          {% endif %}
        {% endif %}
      {% endfor %}

      {%- assign random_handles_array = random_collections | split: ',' -%}
      {%- assign random_collection_objects = '' -%}

      {% comment %}
        Now convert handles back to real collection objects
      {% endcomment %}
      {% for handle in random_handles_array %}
        {% if collections[handle] %}
          {% if random_collection_objects != '' %}
            {% assign random_collection_objects = random_collection_objects | append: ',' | append: handle %}
          {% else %}
            {% assign random_collection_objects = handle %}
          {% endif %}
        {% endif %}
      {% endfor %}

      {%- assign random_collection_objects = random_collection_objects | split: ',' -%}
      {% comment %}
        Now we have an array "random_collection_objects" containing two handles.
        We can render them using the existing snippet:
      {% endcomment %}

      {%- for handle in random_collection_objects -%}
        {% assign collection = collections[handle] %}
        {%- liquid
          capture gridView
            if random_collection_objects.size < section.settings.per_row
              assign products_per_row = random_collection_objects.size
            else
              assign products_per_row = section.settings.per_row
            endif
            render 'products_per_row', products_per_row: products_per_row, style: 'fractions'
          endcapture
        -%}

        {%- render 'collection-grid-item',
          collection: collection,
          block: null,
          gridView: gridView,
          background_position: 'center',
          per_row: section.settings.per_row,
          sizeVariable: gridView,
          fallback: 'variable'
        -%}
      {%- endfor -%}

    {% else %}
      running old one
      {%- for block in section.blocks -%}
        {%- liquid
          assign collection = collections[block.settings.collection]
          assign background_position = block.settings.focal_point

          capture gridView
            if section.blocks.size < section.settings.per_row
              assign products_per_row = section.blocks.size
            else
              assign products_per_row = section.settings.per_row
            endif
            render 'products_per_row', products_per_row: products_per_row, style: 'fractions'
          endcapture
        -%}

        {%- render 'collection-grid-item',
          collection: collection,
          block: block,
          gridView: gridView,
          background_position: background_position,
          per_row: section.settings.per_row,
          sizeVariable: gridView,
          fallback: 'variable'
        -%}
      {%- endfor -%}
    {% endif %}

    {%- if isEmpty -%}
      <div class="page-width">
        <div class="grid">
          <div class="grid__item">
            <div class="rte">
              {{ 'home_page.onboarding.no_content' | t }}
            </div>
          </div>
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{%- if section.settings.divider -%}</div>{%- endif -%}

{% schema %}
{
  "name": "custom collection",
  "class": "index-section",
  "max_blocks": 15,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "t:sections.featured-collections.settings.title.label",
      "default": "Collection list"
    },
    {
      "type": "checkbox",
      "id": "divider",
      "label": "t:sections.featured-collections.settings.divider.label",
      "default": false
    },
    {
      "type": "range",
      "id": "per_row",
      "label": "t:sections.featured-collections.settings.per_row.label",
      "default": 4,
      "min": 2,
      "max": 5,
      "step": 1
    },
    {
      "type": "checkbox",
      "id": "enable_gutter",
      "label": "t:sections.featured-collections.settings.enable_gutter.label",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "custom featured collection",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "t:sections.featured-collections.blocks.collection.name",
      "settings": [
        {
          "id": "collection",
          "type": "collection",
          "label": "t:sections.featured-collections.blocks.collection.settings.collection.label"
        },
        {
          "type": "text",
          "id": "title",
          "label": "t:sections.featured-collections.blocks.collection.settings.title.label"
        },
        {
          "type": "select",
          "id": "focal_point",
          "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.label",
          "info": "t:sections.featured-collections.blocks.collection.settings.focal_point.info",
          "default": "center center",
          "options": [
            {
              "value": "20% 0",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.20_0.label"
            },
            {
              "value": "top center",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.top_center.label"
            },
            {
              "value": "80% 0",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.80_0.label"
            },
            {
              "value": "20% 50%",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.20_50.label"
            },
            {
              "value": "center center",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.center_center.label"
            },
            {
              "value": "80% 50%",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.80_50.label"
            },
            {
              "value": "20% 100%",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.20_100.label"
            },
            {
              "value": "bottom center",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.bottom_center.label"
            },
            {
              "value": "80% 100%",
              "label": "t:sections.featured-collections.blocks.collection.settings.focal_point.options.80_100.label"
            }
          ]
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["footer", "header", "custom.popups"]
  }
}
{% endschema %}
