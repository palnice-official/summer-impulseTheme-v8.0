{% doc %}
  @prompt
    Create a blog section that displays blog posts in a grid layout with featured images, titles, excerpts, and read more links. Include customizable settings for number of posts to show, grid columns, and styling options like colors and typography.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-grid__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-grid__header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-blog-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-blog-grid__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-blog-grid__posts-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-blog-grid__post-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-blog-grid__post-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
  }

  .ai-blog-grid__image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-blog-grid__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-blog-grid__post-{{ ai_gen_id }}:hover .ai-blog-grid__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-blog-grid__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-blog-grid__image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-blog-grid__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-blog-grid__post-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.post_title_size }}px;
    color: {{ block.settings.post_title_color }};
    margin: 0 0 12px;
    line-height: 1.3;
    font-weight: 600;
  }

  .ai-blog-grid__post-title-link-{{ ai_gen_id }} {
    color: inherit;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .ai-blog-grid__post-title-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-grid__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 16px;
    font-size: 14px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-grid__date-{{ ai_gen_id }},
  .ai-blog-grid__author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-grid__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0 0 20px;
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
    transition: color 0.3s ease;
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    transition: transform 0.3s ease;
  }

  .ai-blog-grid__read-more-{{ ai_gen_id }}:hover svg {
    transform: translateX(4px);
  }

  .ai-blog-grid__empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  @media screen and (max-width: 768px) {
    .ai-blog-grid__posts-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-blog-grid__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-blog-grid__content-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.75 }}px;
    }

    .ai-blog-grid__image-container-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-blog-grid__posts-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-blog-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-blog-grid__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-grid__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-blog-grid__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank %}
      {% assign blog_posts = block.settings.blog.articles | limit: block.settings.posts_to_show %}
      
      {% if blog_posts.size > 0 %}
        <div class="ai-blog-grid__posts-{{ ai_gen_id }}">
          {% for article in blog_posts %}
            <article class="ai-blog-grid__post-{{ ai_gen_id }}">
              <div class="ai-blog-grid__image-container-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    class="ai-blog-grid__image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="{{ block.settings.image_height }}"
                  >
                {% else %}
                  <div class="ai-blog-grid__image-placeholder-{{ ai_gen_id }}">
                    {{ 'blog-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-blog-grid__content-{{ ai_gen_id }}">
                <h3 class="ai-blog-grid__post-title-{{ ai_gen_id }}">
                  <a href="{{ article.url }}" class="ai-blog-grid__post-title-link-{{ ai_gen_id }}">
                    {{ article.title }}
                  </a>
                </h3>

                {% if block.settings.show_meta %}
                  <div class="ai-blog-grid__meta-{{ ai_gen_id }}"><div class="ai-blog-grid__date-{{ ai_gen_id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                        <line x1="16" y1="2" x2="16" y2="6"></line>
                        <line x1="8" y1="2" x2="8" y2="6"></line>
                        <line x1="3" y1="10" x2="21" y2="10"></line>
                      </svg>
                      {{ article.published_at | date: '%B %d, %Y' }}
                    </div>
                    {% if article.author != blank %}
                      <div class="ai-blog-grid__author-{{ ai_gen_id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                          <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        {{ article.author }}
                      </div>
                    {% endif %}
                  </div>
                {% endif %}

                {% if block.settings.show_excerpt and article.excerpt != blank %}
                  <div class="ai-blog-grid__excerpt-{{ ai_gen_id }}">
                    {{ article.excerpt | truncate: block.settings.excerpt_length }}
                  </div>
                {% endif %}

                <a href="{{ article.url }}" class="ai-blog-grid__read-more-{{ ai_gen_id }}">
                  {{ block.settings.read_more_text }}
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <line x1="5" y1="12" x2="19" y2="12"></line>
                    <polyline points="12,5 19,12 12,19"></polyline>
                  </svg>
                </a>
              </div>
            </article>
          {% endfor %}
        </div>
      {% else %}
        <div class="ai-blog-grid__empty-state-{{ ai_gen_id }}">
          <p>No blog posts found. Please add some articles to your blog.</p>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-blog-grid__empty-state-{{ ai_gen_id }}">
        <p>Please select a blog to display posts.</p>
      </div>
    {% endif %}
  </div>
</div>

