<script>
  (function() {
    class BlogCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slidesDesktop = parseInt(this.dataset.slidesDesktop) || 3;
        this.slidesMobile = parseInt(this.dataset.slidesMobile) || 1;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-blog-carousel__track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-blog-carousel__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-blog-carousel__prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-blog-carousel__next-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-blog-carousel__dots-{{ ai_gen_id }}');

        if (!this.track || this.slides.length === 0) return;

        this.init();
        this.setupEventListeners();
        this.updateCarousel();
      }

      init() {
        this.createDots();
        this.updateNavigationState();
      }

      get slidesPerView() {
        return window.innerWidth <= 768 ? this.slidesMobile : this.slidesDesktop;
      }

      get totalSlides() {
        return Math.max(0, this.slides.length - this.slidesPerView + 1);
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        
        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = `ai-blog-carousel__dot-{{ ai_gen_id }}${i === 0 ? ' active' : ''}`;
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prevSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        window.addEventListener('resize', () => {
          this.createDots();
          this.currentSlide = Math.min(this.currentSlide, this.totalSlides - 1);
          this.updateCarousel();
        });
      }

      goToSlide(index) {
        this.currentSlide = Math.max(0, Math.min(index, this.totalSlides - 1));
        this.updateCarousel();
      }

      prevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateCarousel();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.updateCarousel();
        }
      }

      updateCarousel() {
        if (!this.track) return;

        const slideWidth = 100 / this.slidesPerView;
        const translateX = -this.currentSlide * slideWidth;
        
        this.track.style.transform = `translateX(${translateX}%)`;
        
        this.updateNavigationState();
        this.updateDots();
      }

      updateNavigationState() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentSlide === 0;
        }

        if (this.nextButton) {
          this.nextButton.disabled = this.currentSlide >= this.totalSlides - 1;
        }
      }

      updateDots() {
        const dots = this.querySelectorAll('.ai-blog-carousel__dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }
    }

    customElements.define('blog-carousel-{{ ai_gen_id }}', BlogCarousel{{ ai_gen_id }});
  })();
</script>

