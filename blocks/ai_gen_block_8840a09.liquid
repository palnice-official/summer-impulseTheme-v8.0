>
  <div class="ai-blog-carousel__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subtitle != blank %}
      <div class="ai-blog-carousel__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-carousel__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-blog-carousel__subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank and block.settings.blog.articles.size > 0 %}
      <div class="ai-blog-carousel__wrapper-{{ ai_gen_id }}">
        <div class="ai-blog-carousel__track-{{ ai_gen_id }}">
          {% for article in block.settings.blog.articles limit: block.settings.posts_limit %}
            <div class="ai-blog-carousel__slide-{{ ai_gen_id }}">
              <div class="ai-blog-carousel__image-container-{{ ai_gen_id }}">
                {% if article.image %}
                  <img
                    src="{{ article.image | image_url: width: 600 }}"
                    alt="{{ article.image.alt | escape }}"
                    class="ai-blog-carousel__image-{{ ai_gen_id }}"loading="lazy"
                    width="600"
                    height="{{ block.settings.image_height }}"
                  >
                {% else %}
                  <div class="ai-blog-carousel__image-placeholder-{{ ai_gen_id }}">
                    {{ 'blog-apparel-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-blog-carousel__content-{{ ai_gen_id }}">
                <h3 class="ai-blog-carousel__article-title-{{ ai_gen_id }}">
                  <a href="{{ article.url }}">{{ article.title }}</a>
                </h3>

                {% if block.settings.show_excerpt and article.excerpt != blank %}
                  <div class="ai-blog-carousel__excerpt-{{ ai_gen_id }}">
                    {{ article.excerpt | truncate: block.settings.excerpt_length }}
                  </div>
                {% endif %}

                {% if block.settings.show_meta %}
                  <div class="ai-blog-carousel__meta-{{ ai_gen_id }}">
                    {% if block.settings.show_date %}
                      <div class="ai-blog-carousel__date-{{ ai_gen_id }}">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
