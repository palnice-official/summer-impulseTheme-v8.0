{% doc %}
  @prompt
    Create a blog section in carousel format that displays blog posts with featured images, titles, and excerpts. Include manual navigation arrows or dots for scrolling through posts. Disable any auto-scroll functionality so users can browse at their own pace. Include customizable settings for styling and layout options.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-carousel-{{ ai_gen_id }} {
    position: relative;
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-carousel__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-blog-carousel__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-blog-carousel__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 16px;
  }

  .ai-blog-carousel__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.8;
    margin: 0;
  }

  .ai-blog-carousel__wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.carousel_border_radius }}px;
  }

  .ai-blog-carousel__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    gap: {{ block.settings.card_gap }}px;
  }

  .ai-blog-carousel__slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.card_gap | times: block.settings.slides_desktop | minus: 1 }}px) / {{ block.settings.slides_desktop }});
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.card_shadow_x }}px {{ block.settings.card_shadow_y }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease;
  }

  .ai-blog-carousel__slide-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
  }

  .ai-blog-carousel__image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.image_height }}px;
    overflow: hidden;
  }

  .ai-blog-carousel__image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-blog-carousel__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-blog-carousel__image-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.3;
  }

  .ai-blog-carousel__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-blog-carousel__article-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.article_title_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    line-height: 1.3;
  }

  .ai-blog-carousel__article-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-blog-carousel__article-title-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.accent_color }};
  }

  .ai-blog-carousel__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.excerpt_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    line-height: 1.5;
    margin: 0 0 16px;
  }

  .ai-blog-carousel__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-blog-carousel__date-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-carousel__author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-blog-carousel__navigation-{{ ai_gen_id }} {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-top: 30px;
  }

  .ai-blog-carousel__arrow-{{ ai_gen_id }} {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    border: none;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all 0.3s ease;
    color: {{ block.settings.nav_button_text_color }};
  }

  .ai-blog-carousel__arrow-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_hover_color }};
    transform: scale(1.1);
  }

  .ai-blog-carousel__arrow-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: none;
  }

  .ai-blog-carousel__arrow-{{ ai_gen_id }} svg {
    width: 20px;
    height: 20px;
  }

  .ai-blog-carousel__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-blog-carousel__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    opacity: 0.3;
  }

  .ai-blog-carousel__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    background-color: {{ block.settings.accent_color }};
  }

  .ai-blog-carousel__empty-state-{{ ai_gen_id }} {
